{
    "name": "alchemy/phpexiftool",
    "type": "library",
    "description": "Exiftool driver for PHP",
    "keywords": ["metadata","exiftool"],
    "license": "MIT",
    "authors": [
        {
            "name": "Romain Neutron",
            "email": "imprec@gmail.com",
            "homepage": "http://www.lickmychip.com/"
        },
        {
            "name": "Benoit Burnichon",
            "email": "bburnichon@alchemy.fr",
            "role": "Lead Developer"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "exiftool/exiftool",
                "version": "12",
                "source": {
                    "url": "https://github.com/exiftool/exiftool",
                    "type": "git",
                    "reference": "12.42"
                }
            }
        }
    ],
    "require": {
        "php": "^8.2",
        "doctrine/collections": "^1.0",
        "exiftool/exiftool": "*",
        "symfony/console": "^7.0",
        "symfony/css-selector": "^7.0",
        "symfony/dom-crawler": "^7.0",
        "symfony/process": "^7.0",
        "ext-dom": "*",
        "ext-json": "*",
        "symfony/monolog-bridge": "^7.0",
        "symfony/cache": "^7.0"
    },
    "suggest": {
        "jms/serializer": "To serialize tags",
        "symfony/yaml": "To serialize tags in Yaml format"
    },
    "require-dev": {
        "jms/serializer": "~3.0",
        "phpunit/phpunit": "^12.0",
        "symfony/finder": "^7.0",
        "symfony/yaml": "^7.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.73"
    },
    "autoload": {
        "psr-4": {
            "PHPExiftool\\": "lib/PHPExiftool/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "lint": "./vendor/bin/php-cs-fixer fix",
        "static-analysis": "./vendor/bin/phpstan analyse"
    }
}
